<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageCapa"
        android:layout_width="0dp"
        android:layout_height="320dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/image_capa_desc"
        android:src="@drawable/kinnporsche"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_principal"
        android:textColor="@color/menu_navegacao"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imageCapa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/button_assistir"
        android:layout_width="125dp"
        android:layout_height="51dp"
        android:drawableLeft="@drawable/ic_executar"
        android:text="@string/assistir"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"/>

    <Button
        android:id="@+id/button_minhaLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minha_lista"
        android:drawableTop="@drawable/ic_adicionar"
        android:backgroundTint="@android:color/transparent"
        android:textSize="12sp"
        android:padding="0dp"
        app:layout_constraintTop_toTopOf="@+id/button_assistir"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="110dp"
        android:layout_height="160dp"
        android:src="@drawable/notme"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/button_assistir"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="110dp"
        android:layout_height="160dp"
        android:src="@drawable/weakhero"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@+id/img1"
        app:layout_constraintStart_toEndOf="@+id/img1"
        android:layout_marginStart="12dp"/>

    <ImageView
        android:id="@+id/img3"
        android:layout_width="110dp"
        android:layout_height="160dp"
        android:src="@drawable/itsokay"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@+id/img1"
        app:layout_constraintStart_toEndOf="@+id/img2"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/nome_aluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keury"
        android:textColor="@color/menu_navegacao"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
